{
  "compilerOptions": {
    "target": "es2016",        
    "module": "commonjs",                     
    "lib": ["es6"],                          
    "allowJs": true,                    
    "outDir": "build",                           
    "rootDir": "server",           
    "strict": true,                       
    "noImplicitAny": true,       
    "esModuleInterop": true,               
    "resolveJsonModule": true,                
    "skipLibCheck": true,                         
    "sourceMap": true
  },
  "exclude": ["node_modules", "dist", "client", ".cache"],
  "include": ["server/**/*"]
}
